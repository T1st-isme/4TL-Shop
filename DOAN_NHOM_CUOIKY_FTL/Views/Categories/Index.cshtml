@model IEnumerable<DOAN_NHOM_CUOIKY_FTL.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAmin.cshtml";
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<h2>Phân loại</h2>

<table class="table">
    <tr>
        <th>
            <p>Mã sản phẩm</p>
        </th>
        <th>
            <p>Tên loại sản phẩm</p>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IDCate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameCate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IDCate }) |
                @Html.ActionLink("Details", "Details", new { id = item.IDCate }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IDCate })
            </td>
        </tr>
    }

</table>

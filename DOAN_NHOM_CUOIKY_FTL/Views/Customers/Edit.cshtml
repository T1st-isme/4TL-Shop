@model DOAN_NHOM_CUOIKY_FTL.Models.Customer

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<style>
    .vitri {
        position: relative;
        top: -50px;
        left: 425px;
        font-size: 20px;
    }

    .border-edit {
        border: 1px solid black;
        background-color: white;
        border-radius: 10px;
        position: relative;
    }

    .vitri-btn {
        text-align: center;
        margin-bottom: 20px;
    }

    .vtr {
        margin-left: 40px;
    }
</style>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h1 style="font-size:25px;text-align:center;padding-top:20px;margin:0 20px 0 0">Thông Tin Khách Hàng</h1>
    <div class="border-edit" style="position:relative;top:20px;left:400px;width:1000px;font-size:20px">
        <div class="vtr">
            <div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IDCus)
            </div>
            <div>
                <p>
                    Tên Khách Hàng:
                </p>
                <div class="vitri">
                    @Html.EditorFor(model => model.NameCus, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NameCus, "", new { @class = "text-danger" })
                </div>

            </div>
            <div>
                <p>
                    Số Điện Thoại:
                </p>
                <div class="vitri">
                    @Html.EditorFor(model => model.PhoneCus, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PhoneCus, "", new { @class = "text-danger" })
                </div>
            </div>
            <div>
                <p>
                    Email:
                </p>
                <div class="vitri">
                    @Html.EditorFor(model => model.EmailCus, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.EmailCus, "", new { @class = "text-danger" })
                </div>
            </div>

            @Html.HiddenFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.HiddenFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="vitri-btn">
            <input type="submit" value="Lưu Thông Tin" class="btn btn-default" />
        </div>
    </div>


}


